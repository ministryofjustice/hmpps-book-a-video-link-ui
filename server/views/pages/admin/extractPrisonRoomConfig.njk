{% extends "partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = "Extract room configuration data for all prisons" %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
            <h1 class="govuk-heading-l">{{ pageTitle }}</h1>
        </div>
    </div>

    <p>
        Data includes prison, prison code, room key, room description, video link, room setup, room status, permissions and schedule information.
    </p>

    <form method='POST'>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

        {{ govukButton({
            text: "Extract data",
            type: "submit"
        }) }}
    </form>

{% endblock %}