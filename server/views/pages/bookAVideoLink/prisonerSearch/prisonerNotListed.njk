{% extends "partials/layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = "You can request a video link booking for a prisoner" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">{{ pageTitle }}</h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">
                You can complete a request for the video link to be booked. This will be sent to the prison who will complete the booking and confirm details with your {{ "court" if session.req.routeContext.type == BavlJourneyType.COURT else "probation team"  }}.
            </p>

            <div class="govuk-button-group">
                {{ govukButton({ text: "Continue", href: "../../booking/request/prisoner/prisoner-details" }) }}
                <a href='search' class='govuk-link govuk-link--no-visited-state'>Search again</a>
            </div>
        </div>
    </div>
{% endblock %}
