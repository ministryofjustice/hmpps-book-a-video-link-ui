{% extends "../partials/layout.njk" %}
{% from "components/card.njk" import card %}

{% set pageTitle = "Book a video link" %}
{% set pageId = 'index-page' %}
{% set mainClasses = "app-container govuk-body" %}
{% set title = "Book a video link with a prison" %}

{% block heading %}
  <h1 class="govuk-heading-l">Select service</h1>
{% endblock %}

{% block content %}

  <h1 class="govuk-heading-l govuk-!-margin-top-7">{{ title }}</h1>
  <p class="govuk-body govuk-!-margin-bottom-7">If you work in a court, you can book a video link with a prison for a court appearance.</p>

   <div class="card-group govuk-grid-row">
        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "href": "#",
                "clickable": "true",
                "heading": "Book a new video link",
                "description": "Create a new video link booking between a court and a prison.",
                "data-qa": "create-booking-card"
            }) }}
        </div>

        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "href": "#",
                "clickable": "true",
                "heading": "View and change video links",
                "description": "You can view and change existing video link bookings for your courts.",
                "data-qa": "view-and-amend-card"
            }) }}
        </div>

        <div class="govuk-grid-column-one-third card-group__item">
            {{ card({
                "href": "#",
                "clickable": "true",
                "heading": "Manage your list of courts",
                "description": "Choose the courts you book video links for.",
                "data-qa": "choose-courts-card"
            }) }}
        </div>
    </div>
{% endblock %}
{% block pageScripts %}
    <script src="/js/card.js"></script>
{% endblock %}
